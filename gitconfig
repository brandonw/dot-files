[core]
	editor = nvim
	pager = diff-so-fancy | less
	excludesfile = /home/brandon/.gitignore
[pager]
	branch = false
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
	indentHeuristic = on
[interactive]
	diffFilter = diff-so-fancy
[difftool]
	prompt = false
[push]
	default = current
[rerere]
	enabled = true
[alias]
	lg = log --graph --decorate --oneline

	; Explicit is better than implicit. If we want to merge
	; we should do so ourselves.
	pull = pull --ff-only
	recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format=\"%(refname:short)\"
	overview = log --all --since=2
