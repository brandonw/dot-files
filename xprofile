#!/bin/sh
#
# ~/.xprofile
#

if [ -x /usr/bin/numlockx ]; then
	/usr/bin/numlockx on
fi

if [ -d ~/.fonts ]; then
	xset +fp ~/.fonts
fi
if [ -d ~/.local/share/fonts ]; then
	xset +fp ~/.local/share/fonts
fi
if [ -e ~/.xbindkeysrc ]; then
	xbindkeys
fi
if [ -d /usr/share/fonts/local ]; then
	xset +fp /usr/share/fonts/local
fi
if [ -e ~/.background.jpg ]; then
	feh  --bg-fill '/home/brandon/.background.jpg'
fi
if [ -e ~/.Xmodmap ]; then
	xmodmap ~/.Xmodmap
fi

xset fp rehash
xsetroot -cursor_name left_ptr
xset r rate 250 20
xset +dpms
xset dpms 0 0 300
xset m 3/2 0
xset s 600

# xinput list
# xinput list-props [dev-num]
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Drag Lock Enabled" 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled" 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Accel Speed" 1.0

AUTOCUTSEL=$(ps aux | grep [a]utocutsel);
if [ "${AUTOCUTSEL:-0}" == 0 ]; then
	autocutsel -fork &
	autocutsel -selection PRIMARY -fork &
fi
XSSLOCK=$(ps aux | grep [x]ss-lock);
if [ "${XSSLOCK:-0}" == 0 ]; then
	xss-lock -- slock &
fi
