#!/bin/sh
#
# ~/.xprofile
#

if [ -x /usr/bin/numlockx ]; then
	/usr/bin/numlockx on
fi

if [ -d ~/.fonts ]; then
	xset +fp ~/.fonts
fi
if [ -d ~/.local/share/fonts ]; then
	xset +fp ~/.local/share/fonts
fi
if [ -e ~/.xbindkeysrc ]; then
	xbindkeys
fi
if [ -d /usr/share/fonts/local ]; then
	xset +fp /usr/share/fonts/local
fi
if [ -e ~/.background.jpg ]; then
	feh  --bg-fill '/home/brandon/.background.jpg'
fi
if [ -e ~/.Xmodmap ]; then
	xmodmap ~/.Xmodmap
fi

xset fp rehash
xsetroot -cursor_name left_ptr
xset r rate 250 20
xset +dpms
xset dpms 0 0 600
xset m 3/2 0

# xinput list
# xinput list-props [dev-num]
xinput set-prop "Synaptics TM3053-004" "libinput Tapping Enabled" 1
xinput set-prop "Synaptics TM3053-004" "libinput Tapping Drag Lock Enabled" 1
xinput set-prop "Synaptics TM3053-004" "libinput Natural Scrolling Enabled" 1
xinput set-prop "Synaptics TM3053-004" "libinput Accel Speed" 1.0

PARCELLITE=$(ps aux | grep [p]arcellite);
if [ "${PARCELLITE:-0}" == 0 ]; then
	parcellite -d -n
fi
XSSLOCK=$(ps aux | grep [x]ss-lock);
if [ "${XSSLOCK:-0}" == 0 ]; then
	xss-lock -- i3lock &
fi
