#!/bin/sh
#
# ~/.xprofile
#

# Fonts
if [ -d ~/.fonts ]; then
	xset +fp ~/.fonts
fi
if [ -d ~/.local/share/fonts ]; then
	xset +fp ~/.local/share/fonts
fi
if [ -d /usr/share/fonts/local ]; then
	xset +fp /usr/share/fonts/local
fi
xset fp rehash

# Background
if [ -e ~/.background.jpg ]; then
	feh  --bg-fill '/home/brandon/.background.jpg'
fi
# Set background color
hsetroot -solid "#000000"

# Display
xset s 600
xset +dpms
xset dpms 0 0 600

# Keyboard
source /home/brandon/.dot-files/configure-keyboard.sh

# Mouse/Trackpad
source /home/brandon/.dot-files/configure-mouse.sh

# Misc. daemons/services
# No longer need parcellite now that I use clipboard exclusively
# PARCELLITE=$(ps aux | grep [p]arcellite);
# if [ "${PARCELLITE:-0}" == 0 ]; then
# 	parcellite -d -n &
# fi
XSSLOCK=$(ps aux | grep [x]ss-lock);
if [ "${XSSLOCK:-0}" == 0 ]; then
    xss-lock -- i3lock -n &
fi
UDISKIE=$(ps aux | grep [u]diskie);
if [ "${UDISKIE:-0}" == 0 ]; then
	udiskie --automount --notify --smart-tray &
fi
PICOM=$(ps aux | grep [p]icom);
if [ "${PICOM:-0}" == 0 ]; then
	picom -b
fi
