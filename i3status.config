# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        output_format = i3bar
}

order += "battery 0"
order += "battery 1"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

battery 0 {
        format = "0: %status %percentage %remaining"
        path = "/sys/class/power_supply/BAT%d/uevent"
        integer_battery_capacity = true
        hide_seconds = true
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        low_threshold = 25
        threshold_type = time
}
battery 1 {
        format = "1: %status %percentage %remaining"
        path = "/sys/class/power_supply/BAT%d/uevent"
        integer_battery_capacity = true
        hide_seconds = true
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        low_threshold = 25
        threshold_type = time
}

tztime local {
        format = "%a %b %e %Y %I:%M:%S %p"
}

cpu_usage {
        format = "CPU: %usage"
        max_threshold = "75"
        degraded_threshold = "20"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
}
