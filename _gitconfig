[user]
	name = Brandon Waskiewicz
	signingkey = ECCC21B70B69FFD6
[core]
	editor = nvim
	pager = less --tabs=4 -RFX
	excludesFile = ~/.gitignore
[pager]
	branch = false
[push]
	default = current
[rerere]
	enabled = true
[alias]
	lg = log --graph --decorate --oneline

	; Explicit is better than implicit. If we want to merge
	; we should do so ourselves.
	pull = pull --ff-only

	; Clean branch -- deletes local + remote branch (assumes remote=origin)
	cb = "!c() { git branch -D $1 && git branch -dr origin/$1 ; }; c"
[pull]
	rebase = false
	ff = only
[url "git@github.com:"]
	insteadOf = https://github.com/
[init]
	defaultBranch = main
